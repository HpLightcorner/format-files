{
    "name": "jbockle-format-files",
    "displayName": "Format Files",
    "description": "",
    "version": "1.0.0",
    "publisher": "jbockle",
    "repository": {
        "type": "git",
        "url": "https://github.com/jbockle/format-files.git"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:editor.action.formatFiles"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "properties": {
                    "formatFiles.include": {
                        "scope": "resource",
                        "type": "string",
                        "description": "Controls which extensions to include in formatting. Default is wildcard for all extensions",
                        "default": "*"
                    },
                    "formatFiles.excludePattern": {
                        "scope": "resource",
                        "type": "string",
                        "description": "Excludes the files/folders declared in pattern",
                        "default": "{**/node_modules/**,**/.vscode/**}"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "editor.action.formatFiles",
                "title": "Format Files"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "editor.action.formatFiles",
                    "group": "navigation@-1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
